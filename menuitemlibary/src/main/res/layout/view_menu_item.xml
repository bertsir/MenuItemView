<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_menu_item_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tv_menu_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的消息"
                android:layout_marginLeft="10dp"
                />
            <cn.bertsir.menuitemlibary.RedPointView
                android:id="@+id/rpv_menu_item"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_menu_item_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_menu_item_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="#3c000000"
        />

</LinearLayout>